mysql> show databases;

mysql> create database studentDB;

mysql> use studentDB;

mysql> CREATE TABLE Department (
    dept_id INT PRIMARY KEY,
    DeptName VARCHAR(100) NOT NULL UNIQUE,
    HOD_Name VARCHAR(100) NOT NULL
    );

mysql> CREATE TABLE Student (
    RegID INT PRIMARY KEY,
    rollno INT UNIQUE NOT NULL,
    fname VARCHAR(50) NOT NULL,
    mname VARCHAR(50),
    lname VARCHAR(50) NOT NULL,
    gender CHAR(1) CHECK (gender IN ('M', 'F')),
    dept_id INT NOT NULL,
    CONSTRAINT fk_dept FOREIGN KEY (dept_id) REFERENCES Department(dept_id)
    );

mysql> CREATE TABLE Course (
    CID INT PRIMARY KEY,
    course_name VARCHAR(80) NOT NULL,
    credit INT CHECK (credit BETWEEN 1 AND 10)
    );

mysql> CREATE TABLE Enrolment (
    enid INT PRIMARY KEY,
    RegID INT NOT NULL,
    DeptID INT NOT NULL,
    CONSTRAINT fk_reg FOREIGN KEY (RegID) REFERENCES Student(RegID),
    CONSTRAINT fk_dept_en FOREIGN KEY (DeptID) REFERENCES Department(dept_id)
    );

mysql> alter table Student
    Add email varchar(50) UNIQUE;

mysql> alter table Course
    Modify course_name varchar(120);

mysql> alter table Enrolment
    Rename to StudentEnrollment;

mysql> alter table Enrolment
    Rename to StudentEnrollment;

mysql> create index idx_dept_no
    On Student(dept_id);

