mysql> show databases;

mysql> CREATE DATABASE LibraryDB;

mysql> USE LibraryDB;

mysql> CREATE TABLE Books (
         b_id INT PRIMARY KEY,
         isbn VARCHAR(20) UNIQUE NOT NULL,
         title VARCHAR(100) NOT NULL,
         author VARCHAR(100),
         genre VARCHAR(50),
         copies INT CHECK (copies >= 0)
     );

mysql> CREATE TABLE Members (
         m_id INT PRIMARY KEY,
         m_name VARCHAR(100) NOT NULL,
         email VARCHAR(100) UNIQUE,
         phone VARCHAR(15),
         join_date DATE
     );

mysql> CREATE TABLE IssuedBooks (
         issue_id INT PRIMARY KEY,
         m_id INT,
         b_id INT,
         issue_date DATE,
         due_date DATE,
         return_date DATE,
         CONSTRAINT fk_member FOREIGN KEY (m_id) REFERENCES Members(m_id),
         CONSTRAINT fk_book FOREIGN KEY (b_id) REFERENCES Books(b_id)
     );

mysql> INSERT INTO Books VALUES
      (1, '70777', 'Database System Concepts', 'Silberschatz', 'DBMS', 5),
